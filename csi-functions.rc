check_daemon_init_status()
{
	DAEMON=$1
	MACHINE=$2
	if ssh -t -l$EC2_USR $MACHINE -i$PEM_CRT_PATH $SSH_QUIET_OPTS "sudo chkconfig $DAEMON";then
		return 0
	fi
	return 1
}

check_daemon_status()
{
	DAEMON=$1
	MACHINE=$2
	if ssh -t -l$EC2_USR $MACHINE -i$PEM_CRT_PATH $SSH_QUIET_OPTS "sudo service $DAEMON status";then
		return 0
	fi
	return 1
}
